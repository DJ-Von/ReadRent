@model IEnumerable<ReadRent.Models.Book>

@{
    ViewBag.Title = "Index";
    bool ascending = ViewData["SortOrder"] == null || ViewData["SortOrder"].ToString() == "asc";
}

<h2>Книги</h2>

<p>
    @Html.ActionLink("Добавить новую книгу", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<a href="@Url.Action("DownloadWord","Books")" class="btn btn-warning">Скачать таблицу в Word</a>

